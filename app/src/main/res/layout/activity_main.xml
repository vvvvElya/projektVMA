<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:rotationX="2"
        android:text="@string/textINapp"
        android:textAlignment="center"
        android:textColor="@color/color_text"
        android:layout_marginTop="25sp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txt_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:background="@color/color_input"
        android:layout_marginHorizontal="20sp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/textINput" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginTop="150sp"
        android:layout_marginHorizontal="18sp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/text_button"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/result_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="100sp"
                android:textSize="30sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/result_two_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_three_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_four_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_five_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_six_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_seven_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/result_eight_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/color_text"
                android:layout_marginTop="60sp"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColorHint="@color/color_input"/>



            <TextView
                android:id="@+id/longitude"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginHorizontal="10sp"/>

            <TextView
                android:id="@+id/latitude"
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30sp"
                android:layout_marginHorizontal="245sp"/>

            <TextView
                android:id="@+id/result_nine_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:rotationX="2"
                android:textAlignment="center"
                android:textColor="@color/COLOR"
                android:layout_marginTop="60sp"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="450dp"
        android:textColor="@color/COLOR"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/errorField"/>


    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp" />


</RelativeLayout>